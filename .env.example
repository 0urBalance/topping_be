# ==============================================
# Topping Application Environment Variables
# ==============================================
# Copy this file to .env and update with your values

# Database Configuration (PostgreSQL)
DB_NAME=topping
DB_USER=topping_user
DB_PASSWORD=topping_pass
DB_PORT=5432
DB_URL=jdbc:postgresql://localhost:5432/topping

# pgAdmin Configuration
PGADMIN_EMAIL=admin@topping.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Email Configuration (SMTP)
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Kakao Social Login
KAKAO_REST_API_KEY=your-kakao-rest-api-key
KAKAO_REDIRECT_URI=http://localhost:8080/api/user/kakao/callback

# File Upload Configuration
UPLOAD_PATH=./src/main/resources/static